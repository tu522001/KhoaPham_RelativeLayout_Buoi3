<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" />

    <TextView
        android:layout_alignParentEnd="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7" />

    <TextView
        android:layout_alignParentBottom="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8" />

    <TextView
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9" />

    <TextView
        android:id="@+id/activity4_text_view_1"
        android:layout_centerInParent="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1" />

    <TextView
        android:layout_above="@id/activity4_text_view_1"
        android:layout_toStartOf="@+id/activity4_text_view_1"
        android:layout_centerInParent="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" />

    <TextView
        android:layout_below="@id/activity4_text_view_1"
        android:layout_toStartOf="@+id/activity4_text_view_1"
        android:layout_centerInParent="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3" />
    <TextView
        android:layout_above="@id/activity4_text_view_1"
        android:layout_toEndOf="@+id/activity4_text_view_1"
        android:layout_centerInParent="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4" />

    <TextView
        android:layout_below="@id/activity4_text_view_1"
        android:layout_toEndOf="@+id/activity4_text_view_1"
        android:layout_centerInParent="true"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:textColor="@color/white"
        android:background="#00BCD4"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5" />

</RelativeLayout>